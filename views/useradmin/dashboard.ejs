<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', { title: 'User Admin Dashboard', user: user }) %>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h2><i class="fas fa-user-shield"></i> Welcome, <%= user.name %></h2>
                <p>Manage user accounts and profiles</p>
                
                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> <%= error %>
                    </div>
                <% } %>
                
                <% if (success) { %>
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle"></i> <%= success %>
                    </div>
                <% } %>
                
                <!-- Quick Actions -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-user-plus fa-3x text-primary mb-3"></i>
                                <h5>User Accounts</h5>
                                <a href="#accounts-section" class="btn btn-primary">Manage</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-id-card fa-3x text-info mb-3"></i>
                                <h5>User Profiles</h5>
                                <a href="#profiles-section" class="btn btn-info">Manage</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-search fa-3x text-success mb-3"></i>
                                <h5>Search Users</h5>
                                <a href="#search-section" class="btn btn-success">Search</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-ban fa-3x text-warning mb-3"></i>
                                <h5>Suspend Users</h5>
                                <a href="#suspend-section" class="btn btn-warning">Suspend</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- User Accounts Management Section -->
                <div class="card mb-4" id="accounts-section">
                    <div class="card-header">
                        <h5><i class="fas fa-user-plus"></i> User Account Management</h5>
                    </div>
                    <div class="card-body">
                        <!-- Create Account -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6>Create User Account</h6>
                                <form action="/bce/useradmin_createuseraccount/createUserAccount" method="POST">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <div class="mb-3">
                                        <label for="username" class="form-label">Username</label>
                                        <input type="text" class="form-control" id="username" name="username" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="password" name="password" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Create Account
                                    </button>
                                </form>
                            </div>
                            
                            <div class="col-md-6">
                                <h6>Update User Account</h6>
                                <form action="/bce/useradmin_updateuseraccount/updateUserAccount" method="POST">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <div class="mb-3">
                                        <label for="accountId" class="form-label">Account ID</label>
                                        <input type="text" class="form-control" id="accountId" name="accountId" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="newEmail" class="form-label">New Email</label>
                                        <input type="email" class="form-control" id="newEmail" name="newEmail">
                                    </div>
                                    <button type="submit" class="btn btn-secondary">
                                        <i class="fas fa-edit"></i> Update Account
                                    </button>
                                </form>
                            </div>
                        </div>
                        
                        <!-- Account Actions -->
                        <div class="row">
                            <div class="col-md-3">
                                <form action="/bce/useradmin_viewuseraccount/viewUserAccount" method="POST">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <button type="submit" class="btn btn-info w-100">
                                        <i class="fas fa-eye"></i> View Accounts
                                    </button>
                                </form>
                            </div>
                            <div class="col-md-3">
                                <form action="/bce/useradmin_searchuseraccount/searchUserAccount" method="POST">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <div class="mb-2">
                                        <input type="text" class="form-control" name="searchTerm" placeholder="Search accounts">
                                    </div>
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-search"></i> Search Accounts
                                    </button>
                                </form>
                            </div>
                            <div class="col-md-3">
                                <form action="/bce/useradmin_suspenduseraccount/suspendUserAccount" method="POST">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <div class="mb-2">
                                        <input type="text" class="form-control" name="accountId" placeholder="Account ID to suspend">
                                    </div>
                                    <button type="submit" class="btn btn-warning w-100">
                                        <i class="fas fa-ban"></i> Suspend Account
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- User Profiles Management Section -->
                <div class="card mb-4" id="profiles-section">
                    <div class="card-header">
                        <h5><i class="fas fa-id-card"></i> User Profile Management</h5>
                    </div>
                    <div class="card-body">
                        <!-- Create Profile -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6>Create User Profile</h6>
                                <form action="/bce/useradmin_createuserprofile/createUserProfile" method="POST">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <div class="mb-3">
                                        <label for="firstName" class="form-label">First Name</label>
                                        <input type="text" class="form-control" id="firstName" name="firstName" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="lastName" class="form-label">Last Name</label>
                                        <input type="text" class="form-control" id="lastName" name="lastName" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="userType" class="form-label">User Type</label>
                                        <select class="form-select" id="userType" name="userType" required>
                                            <option value="">Select Type</option>
                                            <option value="personinneed">Person in Need</option>
                                            <option value="csrrepresentative">CSR Representative</option>
                                            <option value="platformmanager">Platform Manager</option>
                                            <option value="useradmin">User Admin</option>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Create Profile
                                    </button>
                                </form>
                            </div>
                            
                            <div class="col-md-6">
                                <h6>Update User Profile</h6>
                                <form action="/bce/useradmin_updateuserprofile/updateUserProfile" method="POST">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <div class="mb-3">
                                        <label for="profileId" class="form-label">Profile ID</label>
                                        <input type="text" class="form-control" id="profileId" name="profileId" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="newFirstName" class="form-label">New First Name</label>
                                        <input type="text" class="form-control" id="newFirstName" name="newFirstName">
                                    </div>
                                    <button type="submit" class="btn btn-secondary">
                                        <i class="fas fa-edit"></i> Update Profile
                                    </button>
                                </form>
                            </div>
                        </div>
                        
                        <!-- Profile Actions -->
                        <div class="row">
                            <div class="col-md-3">
                                <form action="/bce/useradmin_viewuserprofile/viewUserProfile" method="POST">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <button type="submit" class="btn btn-info w-100">
                                        <i class="fas fa-eye"></i> View Profiles
                                    </button>
                                </form>
                            </div>
                            <div class="col-md-3">
                                <form action="/bce/useradmin_searchuserprofile/searchUserProfile" method="POST">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <div class="mb-2">
                                        <input type="text" class="form-control" name="searchTerm" placeholder="Search profiles">
                                    </div>
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-search"></i> Search Profiles
                                    </button>
                                </form>
                            </div>
                            <div class="col-md-3">
                                <form action="/bce/useradmin_suspenduserprofile/suspendUserProfile" method="POST">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <div class="mb-2">
                                        <input type="text" class="form-control" name="profileId" placeholder="Profile ID to suspend">
                                    </div>
                                    <button type="submit" class="btn btn-warning w-100">
                                        <i class="fas fa-ban"></i> Suspend Profile
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../partials/footer') %>
</body>
</html>