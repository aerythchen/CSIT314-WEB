<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Person in Need Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', { title: 'Person in Need Dashboard', user: user }) %>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h2><i class="fas fa-user-heart"></i> Welcome, <%= user.name %></h2>
                <p>Manage your assistance requests and track your progress</p>
                
                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> <%= error %>
                    </div>
                <% } %>
                
                <% if (success) { %>
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle"></i> <%= success %>
                    </div>
                <% } %>
                
                <!-- Quick Actions -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-plus-circle fa-3x text-primary mb-3"></i>
                                <h5>Create Request</h5>
                                <a href="/personinneed/create-request" class="btn btn-primary">New Request</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-list fa-3x text-info mb-3"></i>
                                <h5>My Requests</h5>
                                <a href="#requests-section" class="btn btn-info">View All</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-history fa-3x text-warning mb-3"></i>
                                <h5>History</h5>
                                <a href="#history-section" class="btn btn-warning">View History</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-chart-line fa-3x text-success mb-3"></i>
                                <h5>Track Progress</h5>
                                <a href="#tracking-section" class="btn btn-success">View Tracking</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Search Requests Section -->
                <div class="card mb-4" id="requests-section">
                    <div class="card-header">
                        <h5><i class="fas fa-search"></i> Search My Requests</h5>
                    </div>
                    <div class="card-body">
                        <form action="/bce/personinneed_searchrequest/searchRequest" method="POST">
                            <input type="hidden" name="userId" value="<%= user.id %>">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label for="searchTerm" class="form-label">Search Term</label>
                                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" placeholder="Search by title or description">
                                </div>
                                <div class="col-md-4">
                                    <label for="category" class="form-label">Category</label>
                                    <select class="form-select" id="category" name="category">
                                        <option value="">All Categories</option>
                                        <option value="food">Food Assistance</option>
                                        <option value="housing">Housing Support</option>
                                        <option value="medical">Medical Aid</option>
                                        <option value="education">Education</option>
                                        <option value="emergency">Emergency Relief</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="status" class="form-label">Status</label>
                                    <select class="form-select" id="status" name="status">
                                        <option value="">All Status</option>
                                        <option value="pending">Pending</option>
                                        <option value="approved">Approved</option>
                                        <option value="rejected">Rejected</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Search Requests
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- My Requests List -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">My Requests</h5>
                        <a href="/personinneed/create-request" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Create New Request
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th>Urgency</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Food assistance for family</td>
                                        <td><span class="badge bg-primary">Food Assistance</span></td>
                                        <td><span class="badge bg-warning">Pending</span></td>
                                        <td><span class="badge bg-danger">High</span></td>
                                        <td>2024-01-15</td>
                                        <td>
                                            <form action="/bce/personinneed_viewrequest/viewRequest" method="POST" style="display: inline;">
                                                <input type="hidden" name="userId" value="<%= user.id %>">
                                                <input type="hidden" name="requestId" value="1">
                                                <button type="submit" class="btn btn-sm btn-outline-primary me-1">
                                                    <i class="fas fa-eye"></i> View
                                                </button>
                                            </form>
                                            <form action="/bce/personinneed_updaterequest/updateRequest" method="POST" style="display: inline;">
                                                <input type="hidden" name="userId" value="<%= user.id %>">
                                                <input type="hidden" name="requestId" value="1">
                                                <button type="submit" class="btn btn-sm btn-outline-secondary me-1">
                                                    <i class="fas fa-edit"></i> Edit
                                                </button>
                                            </form>
                                            <form action="/bce/personinneed_deleterequest/deleteRequest" method="POST" style="display: inline;">
                                                <input type="hidden" name="userId" value="<%= user.id %>">
                                                <input type="hidden" name="requestId" value="1">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <!-- History Section -->
                <div class="card mb-4" id="history-section">
                    <div class="card-header">
                        <h5><i class="fas fa-history"></i> Request History</h5>
                    </div>
                    <div class="card-body">
                        <form action="/bce/personinneed_searchhistory/searchHistory" method="POST">
                            <input type="hidden" name="userId" value="<%= user.id %>">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="startDate" class="form-label">Start Date</label>
                                    <input type="date" class="form-control" id="startDate" name="startDate">
                                </div>
                                <div class="col-md-6">
                                    <label for="endDate" class="form-label">End Date</label>
                                    <input type="date" class="form-control" id="endDate" name="endDate">
                                </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-search"></i> Search History
                                </button>
                            </div>
                        </form>
                        
                        <div class="mt-3">
                            <form action="/bce/personinneed_viewhistory/viewHistory" method="POST">
                                <input type="hidden" name="userId" value="<%= user.id %>">
                                <button type="submit" class="btn btn-info">
                                    <i class="fas fa-eye"></i> View All History
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Tracking Section -->
                <div class="card mb-4" id="tracking-section">
                    <div class="card-header">
                        <h5><i class="fas fa-chart-line"></i> Track Progress</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Shortlist Tracking</h6>
                                <form action="/bce/personinneed_trackshortlist/trackShortlist" method="POST">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-star"></i> Track Shortlist
                                    </button>
                                </form>
                            </div>
                            <div class="col-md-6">
                                <h6>View Tracking</h6>
                                <form action="/bce/personinneed_trackviews/trackViews" method="POST">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <button type="submit" class="btn btn-info">
                                        <i class="fas fa-eye"></i> Track Views
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../partials/footer') %>
</body>
</html>