<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Request</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', { title: 'Create Request', user: user }) %>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h2><i class="fas fa-plus"></i> Create New Request</h2>
                <p>Submit a new assistance request</p>
                
                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> <%= error %>
                    </div>
                <% } %>
                
                <% if (success) { %>
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle"></i> <%= success %>
                    </div>
                <% } %>
                
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-edit"></i> Request Details</h5>
                    </div>
                    <div class="card-body">
                        <form id="createRequestForm" onsubmit="createRequest(event)">
                            <input type="hidden" name="userId" value="<%= user.id %>">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="title" class="form-label">Request Title *</label>
                                    <input type="text" class="form-control" id="title" name="title" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="category" class="form-label">Category *</label>
                                    <select class="form-select" id="category" name="category" required>
                                        <option value="">Select a category</option>
                                        <!-- Categories will be loaded dynamically -->
                                    </select>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="4" placeholder="Please provide detailed information about your request (optional)..."></textarea>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="urgency" class="form-label">Urgency Level *</label>
                                    <select class="form-select" id="urgency" name="urgency" required>
                                        <option value="">Select urgency level</option>
                                        <option value="low">Low - Can wait a few weeks</option>
                                        <option value="medium">Medium - Needed within a week</option>
                                        <option value="high">High - Needed within 2-3 days</option>
                                        <option value="critical">Critical - Needed immediately</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="contact" class="form-label">Contact Information</label>
                                    <input type="text" class="form-control" id="contact" name="contact" placeholder="Phone number or alternative contact">
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="terms" required>
                                    <label class="form-check-label" for="terms">
                                        I agree to the terms and conditions and understand that this request will be reviewed by CSR representatives.
                                    </label>
                                </div>
                            </div>
                            
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="button" class="btn btn-outline-secondary me-md-2">
                                    <i class="fas fa-arrow-left"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane"></i> Submit Request
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../partials/footer') %>
    
    <script>
        // Load categories dynamically
        async function loadCategories() {
            try {
                const response = await fetch('/api/categories');
                const data = await response.json();
                
                if (data.success) {
                    const categorySelect = document.getElementById('category');
                    
                    // Clear existing options except the first one
                    categorySelect.innerHTML = '<option value="">Select a category</option>';
                    
                    // Add categories from database
                    data.categories.forEach(category => {
                        const option = document.createElement('option');
                        option.value = category.name;
                        option.textContent = category.name;
                        categorySelect.appendChild(option);
                    });
                } else {
                    console.error('Failed to load categories:', data.error);
                }
            } catch (error) {
                console.error('Error loading categories:', error);
            }
        }
        
        // Create Request Function
        async function createRequest(event) {
            event.preventDefault();
            
            try {
                const formData = new FormData(event.target);
                
                const response = await fetch('/bce/personinneed_createrequest/createRequest', {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: formData
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showSuccess(data.message || 'Request created successfully!');
                    // Redirect to dashboard after a short delay
                    setTimeout(() => {
                        window.location.href = '/personinneed/dashboard';
                    }, 1500);
                } else {
                    showError(data.error || 'Failed to create request');
                }
            } catch (error) {
                console.error('Error creating request:', error);
                showError('Failed to create request');
            }
        }
        
        // Show success message
        function showSuccess(message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-success alert-dismissible fade show';
            alertDiv.innerHTML = `
                <i class="fas fa-check-circle"></i> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.querySelector('.container-fluid').insertBefore(alertDiv, document.querySelector('.container-fluid').firstChild);
        }
        
        // Show error message
        function showError(message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-danger alert-dismissible fade show';
            alertDiv.innerHTML = `
                <i class="fas fa-exclamation-triangle"></i> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.querySelector('.container-fluid').insertBefore(alertDiv, document.querySelector('.container-fluid').firstChild);
        }
        
        // Load categories when page loads
        document.addEventListener('DOMContentLoaded', loadCategories);
    </script>
</body>
</html>
