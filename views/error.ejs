<%- include('partials/header', { title: 'Error', user: user || null }) %>

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle me-2"></i>Error</h4>
            </div>
            <div class="card-body text-center">
                <i class="fas fa-exclamation-circle text-danger" style="font-size: 4rem;"></i>
                <h5 class="mt-3"><%= error || 'An error occurred' %></h5>
                <p class="text-muted">Please try again or contact support if the problem persists.</p>
                <a href="<%= (typeof user !== 'undefined' && user) ? '/' + user.userType + '/dashboard' : '/auth/login' %>" class="btn btn-primary mt-3">
                    <i class="fas fa-home me-2"></i>Go Back
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

