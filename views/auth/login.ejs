<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CSR Volunteering Website - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
        <div class="row w-100">
            <div class="col-md-6 mx-auto">
                <div class="dashboard-card card">
                    <div class="card-header text-center">
                        <h3><i class="fas fa-heart me-2"></i> CSR Volunteering Platform</h3>
                        <p class="mb-0">Login to your account</p>
                    </div>
                    <div class="card-body p-4">
                        <% if (error) { %>
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-triangle"></i> <%= error %>
                            </div>
                        <% } %>
                        
                        <% if (success) { %>
                            <div class="alert alert-success" role="alert">
                                <i class="fas fa-check-circle"></i> <%= success %>
                            </div>
                        <% } %>
                        
                        <form method="POST" action="/bce/csrrepresentative_login/login" id="loginForm">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="userType" class="form-label">User Type</label>
                                <select class="form-select" id="userType" name="userType" required onchange="updateFormAction()">
                                    <option value="" selected>Select your role</option>
                                    <option value="csrrepresentative">CSR Representative</option>
                                    <option value="personinneed">Person in Need</option>
                                    <option value="platformmanager">Platform Manager</option>
                                    <option value="useradmin">User Administrator</option>
                                </select>
                            </div>
                            
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </button>
                            </div>
                        </form>
                        
                        <script>
                            function updateFormAction() {
                                const userType = document.getElementById('userType').value;
                                const form = document.getElementById('loginForm');
                                
                                switch(userType) {
                                    case 'personinneed':
                                        form.action = '/bce/personinneed_login/login';
                                        break;
                                    case 'csrrepresentative':
                                        form.action = '/bce/csrrepresentative_login/login';
                                        break;
                                    case 'platformmanager':
                                        form.action = '/bce/platformmanager_login/login';
                                        break;
                                    case 'useradmin':
                                        form.action = '/bce/useradmin_login/login';
                                        break;
                                    default:
                                        form.action = '/bce/personinneed_login/login';
                                }
                            }
                        </script>
                    </div>
                    <div class="card-footer bg-light">
                        <h6 class="text-muted mb-2">Test Accounts:</h6>
                        <small class="text-muted">
                            <strong>User Admin:</strong> bob.admin@csrplatform.com / password123<br>
                            <strong>Platform Mgr:</strong> alice.manager@csrplatform.com / password123<br>
                            <strong>CSR Rep:</strong> carol.williams@company.com / password123<br>
                            <strong>Person in Need:</strong> emma.johnson@email.com / password123
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
