<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CSR Representative Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', { title: 'CSR Representative Dashboard', user: user }) %>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h2><i class="fas fa-user-tie"></i> Welcome, <%= user.name %></h2>
                <p>Manage opportunities and help those in need</p>
                
                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> <%= error %>
                    </div>
                <% } %>
                
                <% if (success) { %>
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle"></i> <%= success %>
                    </div>
                <% } %>
                
                <!-- Quick Actions -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-list fa-3x text-primary mb-3"></i>
                                <h5>View Requests</h5>
                                <button type="button" class="btn btn-primary" onclick="viewAllOpportunities()">View All</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-star fa-3x text-warning mb-3"></i>
                                <h5>View Shortlist</h5>
                                <button type="button" class="btn btn-warning" onclick="viewShortlist()">View Shortlist</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-history fa-3x text-info mb-3"></i>
                                <h5>View History</h5>
                                <button type="button" class="btn btn-info" onclick="viewHistory()">View History</button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Search Opportunities Section -->
                <div class="card mb-4" id="search-section">
                    <div class="card-header">
                        <h5><i class="fas fa-search"></i> Search Opportunities</h5>
                    </div>
                    <div class="card-body">
                        <form id="searchForm" onsubmit="searchOpportunities(event)">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label for="searchTerm" class="form-label">Search Term</label>
                                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" placeholder="Search opportunities">
                                </div>
                                <div class="col-md-4">
                                    <label for="category" class="form-label">Category</label>
                                    <select class="form-select" id="category" name="category">
                                        <option value="">All Categories</option>
                                        <option value="Food Assistance">Food Assistance</option>
                                        <option value="Housing Support">Housing Support</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="urgency" class="form-label">Urgency</label>
                                    <select class="form-select" id="urgency" name="urgency">
                                        <option value="">All Urgency</option>
                                        <option value="low">Low</option>
                                        <option value="medium">Medium</option>
                                        <option value="high">High</option>
                                        <option value="critical">Critical</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Search Opportunities
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Opportunities List -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Available Opportunities</h5>
                        <form action="/bce/csrrepresentative_searchopportunity/searchOpportunity" method="POST" class="d-inline">
                            <input type="hidden" name="userId" value="<%= user.id %>">
                            <input type="hidden" name="searchTerm" value="">
                            <input type="hidden" name="category" value="">
                            <input type="hidden" name="urgency" value="">
                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-refresh"></i> Refresh
                            </button>
                        </form>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> 
                            Click "View All Requests" above to see all available opportunities, or use the search form to filter results.
                        </div>
                    </div>
                </div>
                
                <!-- Shortlist Management Section -->
                <div class="card mb-4" id="shortlist-section">
                    <div class="card-header">
                        <h5><i class="fas fa-star"></i> My Shortlist</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <form action="/csrrepresentative/shortlist-results" method="GET">
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="searchTerm" placeholder="Search shortlist">
                                        <button type="submit" class="btn btn-outline-secondary">
                                            <i class="fas fa-search"></i> Search
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-6">
                                <a href="/csrrepresentative/shortlist-results" class="btn btn-warning">
                                    <i class="fas fa-list"></i> View All Shortlist
                                </a>
                            </div>
                        </div>
                        
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> 
                            Use the "View All Shortlist" button above to see your saved opportunities.
                        </div>
                    </div>
                </div>
            </div>

            <!-- Match History Section -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-history"></i> Match History
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- View All History -->
                        <a href="/csrrepresentative/history-results" class="btn btn-info w-100 mb-4">
                            <i class="fas fa-list"></i> View All Match History
                        </a>

                        <hr>

                        <!-- Search History -->
                        <h6 class="mb-3">Search History</h6>
                        <form action="/csrrepresentative/history-results" method="GET">
                            <div class="mb-3">
                                <label for="searchTerm" class="form-label">Search Term</label>
                                <input type="text" class="form-control" id="searchTerm" name="searchTerm" placeholder="Search by title or description...">
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="category" class="form-label">Category</label>
                                    <select class="form-select" id="category" name="category">
                                        <option value="">All Categories</option>
                                        <option value="Food Assistance">Food Assistance</option>
                                        <option value="Housing Support">Housing Support</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="urgency" class="form-label">Urgency</label>
                                    <select class="form-select" id="urgency" name="urgency">
                                        <option value="">All Urgency</option>
                                        <option value="low">Low</option>
                                        <option value="medium">Medium</option>
                                        <option value="high">High</option>
                                        <option value="critical">Critical</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="status" class="form-label">Match Status</label>
                                <select class="form-select" id="status" name="status">
                                    <option value="">All Status</option>
                                    <option value="completed">Completed</option>
                                    <option value="pending">Pending</option>
                                    <option value="cancelled">Cancelled</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-outline-info w-100">
                                <i class="fas fa-search"></i> Search History
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../partials/footer') %>
    
    <script>
        // CSR Dashboard AJAX Functions
        
        // View All Opportunities
        async function viewAllOpportunities() {
            try {
                const formData = new FormData();
                formData.append('searchTerm', '');
                formData.append('category', '');
                formData.append('urgency', '');
                formData.append('viewAll', 'true');
                
                const response = await fetch('/bce/csrrepresentative_searchopportunity/searchOpportunity', {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: formData
                });
                
                const data = await response.json();
                
                if (data.success) {
                    displayOpportunities(data.data.opportunities);
                } else {
                    showError(data.error || 'Failed to load opportunities');
                }
            } catch (error) {
                console.error('Error loading opportunities:', error);
                showError('Failed to load opportunities');
            }
        }
        
        // Search Opportunities
        async function searchOpportunities(event) {
            event.preventDefault();
            
            try {
                const formData = new FormData(event.target);
                
                const response = await fetch('/bce/csrrepresentative_searchopportunity/searchOpportunity', {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: formData
                });
                
                const data = await response.json();
                
                if (data.success) {
                    displayOpportunities(data.data.opportunities);
                } else {
                    showError(data.error || 'Search failed');
                }
            } catch (error) {
                console.error('Error searching opportunities:', error);
                showError('Search failed');
            }
        }
        
        // View Shortlist
        async function viewShortlist() {
            try {
                const formData = new FormData();
                formData.append('userId', '<%= user.id %>');
                
                const response = await fetch('/bce/csrrepresentative_viewshortlist/viewShortlist', {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: formData
                });
                
                const data = await response.json();
                
                if (data.success) {
                    displayShortlist(data.data.shortlistItems);
                } else {
                    showError(data.error || 'Failed to load shortlist');
                }
            } catch (error) {
                console.error('Error loading shortlist:', error);
                showError('Failed to load shortlist');
            }
        }
        
        // View History
        async function viewHistory() {
            try {
                const formData = new FormData();
                formData.append('userId', '<%= user.id %>');
                
                const response = await fetch('/bce/csrrepresentative_viewhistory/viewHistory', {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: formData
                });
                
                const data = await response.json();
                
                if (data.success) {
                    displayHistory(data.data.historyItems);
                } else {
                    showError(data.error || 'Failed to load history');
                }
            } catch (error) {
                console.error('Error loading history:', error);
                showError('Failed to load history');
            }
        }
        
        // Display Opportunities
        function displayOpportunities(opportunities) {
            const resultsContainer = document.getElementById('search-results');
            if (!resultsContainer) {
                // Create results container if it doesn't exist
                const searchSection = document.getElementById('search-section');
                const resultsDiv = document.createElement('div');
                resultsDiv.id = 'search-results';
                resultsDiv.className = 'card mt-4';
                resultsDiv.innerHTML = `
                    <div class="card-header">
                        <h5><i class="fas fa-list"></i> Search Results</h5>
                    </div>
                    <div class="card-body">
                        <div id="opportunities-list"></div>
                    </div>
                `;
                searchSection.parentNode.insertBefore(resultsDiv, searchSection.nextSibling);
            }
            
            const opportunitiesList = document.getElementById('opportunities-list');
            if (opportunities && opportunities.length > 0) {
                let html = '<div class="table-responsive"><table class="table table-striped"><thead><tr><th>Title</th><th>Category</th><th>Urgency</th><th>Status</th><th>Actions</th></tr></thead><tbody>';
                
                opportunities.forEach(opportunity => {
                    html += `
                        <tr>
                            <td>${opportunity.title}</td>
                            <td><span class="badge bg-primary">${opportunity.categoryName}</span></td>
                            <td><span class="badge bg-${getUrgencyClass(opportunity.urgency)}">${opportunity.urgency}</span></td>
                            <td><span class="badge bg-${getStatusClass(opportunity.status)}">${opportunity.status}</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" onclick="viewOpportunity('${opportunity.id}')">View</button>
                                <button class="btn btn-sm btn-outline-warning" onclick="saveToShortlist('${opportunity.id}')">Save</button>
                            </td>
                        </tr>
                    `;
                });
                
                html += '</tbody></table></div>';
                opportunitiesList.innerHTML = html;
            } else {
                opportunitiesList.innerHTML = '<p class="text-muted">No opportunities found.</p>';
            }
        }
        
        // Display Shortlist
        function displayShortlist(shortlistItems) {
            // Similar implementation for shortlist
            console.log('Displaying shortlist:', shortlistItems);
        }
        
        // Display History
        function displayHistory(historyItems) {
            // Similar implementation for history
            console.log('Displaying history:', historyItems);
        }
        
        // Utility functions
        function getUrgencyClass(urgency) {
            const classes = { 'critical': 'danger', 'high': 'warning', 'medium': 'info', 'low': 'success' };
            return classes[urgency] || 'secondary';
        }
        
        function getStatusClass(status) {
            const classes = { 'pending': 'warning', 'assigned': 'info', 'completed': 'success' };
            return classes[status] || 'secondary';
        }
        
        function showError(message) {
            // Show error message to user
            alert('Error: ' + message);
        }
    </script>
</body>
</html>