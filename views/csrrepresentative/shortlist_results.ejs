<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Shortlist</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', { title: 'My Shortlist', user: user }) %>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <% if (viewAll || (!searchTerm && !category && !urgency)) { %>
                            <h2><i class="fas fa-star"></i> My Shortlist</h2>
                            <p>Showing all <%= shortlistItems ? shortlistItems.length : 0 %> items in your shortlist. Use the filters below to narrow down your search.</p>
                        <% } else { %>
                            <h2><i class="fas fa-search"></i> Shortlist Search Results</h2>
                            <p>Found <%= shortlistItems ? shortlistItems.length : 0 %> items matching your criteria</p>
                        <% } %>
                    </div>
                    <a href="/csrrepresentative/dashboard" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
                
                <!-- Success/Error Messages -->
                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> <%= error %>
                    </div>
                <% } %>
                
                <% if (success) { %>
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle"></i> <%= success %>
                    </div>
                <% } %>
                
                <!-- Search Filters -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-filter"></i> Search & Filter</h5>
                    </div>
                    <div class="card-body">
                        <form action="/csrrepresentative/shortlist-results" method="GET">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="searchTerm" class="form-label">Search Term</label>
                                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                                           placeholder="Search by title or description..." value="<%= searchTerm || '' %>">
                                </div>
                                <div class="col-md-3">
                                    <label for="category" class="form-label">Category</label>
                                    <select class="form-select" id="category" name="category">
                                        <option value="">All Categories</option>
                                        <option value="Food Assistance" <%= (category === 'Food Assistance') ? 'selected' : '' %>>Food Assistance</option>
                                        <option value="Housing Support" <%= (category === 'Housing Support') ? 'selected' : '' %>>Housing Support</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label for="urgency" class="form-label">Urgency</label>
                                    <select class="form-select" id="urgency" name="urgency">
                                        <option value="">All Urgency Levels</option>
                                        <option value="critical" <%= (urgency === 'critical') ? 'selected' : '' %>>Critical</option>
                                        <option value="high" <%= (urgency === 'high') ? 'selected' : '' %>>High</option>
                                        <option value="medium" <%= (urgency === 'medium') ? 'selected' : '' %>>Medium</option>
                                        <option value="low" <%= (urgency === 'low') ? 'selected' : '' %>>Low</option>
                                    </select>
                                </div>
                                <div class="col-md-2 d-flex align-items-end gap-2">
                                    <button type="submit" class="btn btn-primary flex-fill">
                                        <i class="fas fa-search"></i> Search
                                    </button>
                                    <% if (searchTerm || category || urgency) { %>
                                        <a href="/csrrepresentative/shortlist-results" class="btn btn-outline-secondary">
                                            <i class="fas fa-times"></i> Clear
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Shortlist Items -->
                <% if (shortlistItems && shortlistItems.length > 0) { %>
                    <div class="row">
                        <% shortlistItems.forEach((item, index) => { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0"><%= item.title %></h6>
                                        <span class="badge bg-primary"><%= item.categoryName %></span>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text text-muted small">
                                            <%= item.description.length > 100 ? item.description.substring(0, 100) + '...' : item.description %>
                                        </p>
                                        
                                        <div class="mb-2">
                                            <strong>Urgency:</strong>
                                            <% if (item.urgency === 'critical') { %>
                                                <span class="badge bg-danger">Critical</span>
                                            <% } else if (item.urgency === 'high') { %>
                                                <span class="badge bg-warning">High</span>
                                            <% } else if (item.urgency === 'medium') { %>
                                                <span class="badge bg-info">Medium</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Low</span>
                                            <% } %>
                                        </div>
                                        
                                        <div class="mb-2">
                                            <strong>Status:</strong>
                                            <% if (item.status === 'approved') { %>
                                                <span class="badge bg-success">Approved</span>
                                            <% } else if (item.status === 'pending') { %>
                                                <span class="badge bg-warning">Pending</span>
                                            <% } else if (item.status === 'rejected') { %>
                                                <span class="badge bg-danger">Rejected</span>
                                            <% } else { %>
                                                <span class="badge bg-info">Completed</span>
                                            <% } %>
                                        </div>
                                        
                                        <div class="mb-2">
                                            <small class="text-muted">
                                                <i class="fas fa-user"></i> Created by: <%= item.createdByName %><br>
                                                <i class="fas fa-eye"></i> Views: <%= item.viewCount || 0 %> | 
                                                <i class="fas fa-star"></i> In Shortlists: <%= item.shortlistCount || 0 %><br>
                                                <i class="fas fa-calendar"></i> Added to shortlist: <%= new Date(item.shortlistCreatedAt).toLocaleDateString() %>
                                            </small>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="d-flex gap-2">
                                            <form action="/bce/csrrepresentative_viewopportunity/viewOpportunity" method="POST" class="flex-fill">
                                                <input type="hidden" name="opportunityId" value="<%= item.id %>">
                                                <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                                                    <i class="fas fa-eye"></i> View Details
                                                </button>
                                            </form>
                                            
                                            <form action="/bce/csrrepresentative_viewopportunity/acceptRequest" method="POST" class="flex-fill">
                                                <input type="hidden" name="requestId" value="<%= item.id %>">
                                                <input type="hidden" name="serviceType" value="General Assistance">
                                                <button type="submit" class="btn btn-outline-success btn-sm w-100" 
                                                        onclick="return confirm('Are you sure you want to accept this request?')">
                                                    <i class="fas fa-check"></i> Accept
                                                </button>
                                            </form>
                                            
                                            <form action="/bce/csrrepresentative_removeshortlist/removeFromShortlist" method="POST" class="flex-fill">
                                                <input type="hidden" name="shortlistId" value="<%= item.shortlistId %>">
                                                <button type="submit" class="btn btn-outline-danger btn-sm w-100" 
                                                        onclick="return confirm('Are you sure you want to remove this item from your shortlist?')">
                                                    <i class="fas fa-trash"></i> Remove
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-star fa-3x text-muted mb-3"></i>
                            <% if (searchTerm || category || urgency) { %>
                                <h5>No items found</h5>
                                <p class="text-muted">No items in your shortlist match your search criteria.</p>
                                <a href="/csrrepresentative/shortlist-results" class="btn btn-primary">
                                    <i class="fas fa-list"></i> View All Shortlist Items
                                </a>
                            <% } else { %>
                                <h5>Your shortlist is empty</h5>
                                <p class="text-muted">You haven't added any opportunities to your shortlist yet.</p>
                                <a href="/csrrepresentative/dashboard" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Browse Opportunities
                                </a>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <%- include('../partials/footer') %>
</body>
</html>
